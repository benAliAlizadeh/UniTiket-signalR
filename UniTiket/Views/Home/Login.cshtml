@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<main class="form-signin w-100 m-auto">
    <form asp-action="login">
        <h1 class="h4 mb-3 fw-normal">Please Login Or <a asp-controller="Home" asp-action="Register">Register</a></h1>
        <div class="form-floating">
            <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="amirpourhassan">
            <label for="floatingInput">UserName</label>

            <span asp-validation-for="Username" class="text-danger"></span>

        </div>

        <div class="form-floating mt-3 ">
            <input asp-for="Password" type="password" class="form-control mb-1" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>

            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <br />
        <div class="checkbox mb-3">
            <label>
                <input asp-for="RememberMe" type="checkbox"> Remember me
            </label>
        </div>
        <button class="w-100 btn btn-lg btn-secondary" type="submit">Sign in</button>
    </form>
</main>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}