@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<main class="form-signin w-100 m-auto">
    <form asp-action="Register">
        <h1 class="h3 mb-3 fw-normal">Please Login Or Register</h1>

        <div class="form-floating">
            <input asp-for="Username" type="text" class="form-control" id="floatingInput" placeholder="amirpourhassan">
            <label for="floatingInput">UserName</label>

            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>

            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="RePassword" type="password" class="form-control" id="floatingPassword1" placeholder="RePassword">
            <label for="floatingPassword1">RePassword</label>

            <span asp-validation-for="RePassword" class="text-danger"></span>
        </div>
        <br />
        <button class="w-100 btn btn-lg btn-success" type="submit">Register</button>
    </form>
</main>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}